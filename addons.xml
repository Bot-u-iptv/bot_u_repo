<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.bot.u.iptv" name="Bot U iptv" version="0.0.1" provider-name="Bot U iptv">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Bot u iptv</summary>
    <description lang="en"></description>
    <disclaimer lang="en"></disclaimer>
    <language></language>
    <platform>all</platform>
    <license></license>
    <forum></forum>
    <website>http://botuiptv.wix.com/botu</website>
    <email>bot.u.iptv@gmail.com</email>
    <source></source>
  </extension>
</addon>

<addon id="repository.bot.u" name="Bot U Repository" version="0.0.1" provider-name="Bot U">
        <extension point="xbmc.addon.repository" name="Bot U Repository">
                <info compressed="false">https://raw.githubusercontent.com/Bot-u-iptv/Bot-u-repo/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/Bot-u-iptv/Bot-u-repo/master/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/Bot-u-iptv/Bot-u-repo/master/addons</datadir>
				<hashes>true</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
                <summary>Install add-ons from the Bot U Repository</summary>
                <description>install add-ons from the Bot U Repository</description>
                <disclaimer></disclaimer>
                <platform>all</platform>
                <website>http://botuiptv.wix.com/botu</website>
        </extension>
</addon>
</addons>
